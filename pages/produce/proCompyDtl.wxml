  <view class='call-way'>
    <view class='getwx'>添加微信</view>
    <view class='getphone'>拨打电话</view>
  <view class='right-top-close' bindtap='close'>+</view>
  </view>
</view> 

<view class='pinglun-box {{pinglun}}'>
