/* pages/produce/produceCompany.wxss */
@import '/pages/university/myindex.wxss';
page{
  background-color: #eff3f6;
}
.search{
  display: flex;
  height: 40rpx;
  padding: 24rpx 30rpx;
  position: relative;

}
.input{
  box-sizing: border-box;
  font-size:30rpx;
  color: #666;
  width: 548rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  border-radius:32rpx; 
  padding-left: 28rpx;
  padding-right: 60rpx;

}
.search-logo{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 190rpx;
  top:36rpx; 
  }
.make{
  font-size: 32rpx;
  color: #2e9aff;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 30rpx;
  text-align: center;
  font-weight: bold;
}
.make-add{
  font-size: 42rpx;
  height: 40rpx;
  line-height: 64rpx;
}
.make{
  font-size: 28rpx;
  font-weight: none;
  line-height: 0rpx;
  height: 40rpx;
  margin-top: 10rpx;

}
/* 搜索到此结束 */
.main-text-wraper{
  flex-wrap:wrap;
}
.maintext{
  margin-bottom: 20rpx;
}
.list{
  padding-bottom: 0;
}
.like,.favorites{
  width: 104rpx;
  height: 32rpx;
  padding: 10 28rpx;
  color: #999;
  border: 2px solid #999;
  border-radius: 6rpx;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

/* 点击关注或者收藏 */
.careLike{
  color: #2e9aff;
  border-color: #2e9aff;
}

/* 选择科研单位发布的类型 */

.content-wran{
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 1330rpx;

  background-color: rgba(90, 90, 90,0.5)
}
.wraper{
  overflow: hidden;
  width: 565rpx;
  height: 245rpx;
  position: relative;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 50% auto auto;
}
.wran-text{
  font-size: 27rpx;
  color: #666;
  text-align: center;
  margin-top: 64rpx;
}
.wran-btn{
  width: 366rpx;
  display: flex;
  font-size: 27rpx;
  color: #fff;
  margin: 46rpx auto;
  justify-content: space-between;
}
.wran-btn-close,.wran-btn-jion{
  padding: 10rpx 30rpx;
  background-color: #2e9aff;
  border-radius: 10rpx;
}
/* 右上角关闭 */
.right-top-close{
  position: absolute;
  right:6rpx;
  top:-14rpx;
  color: #999999;
  font-size: 61rpx;
  transform: rotate(45deg);
}

/* 选择发布类型 */
.fixedbtm1{
  height: 1000rpx;
}
.fixedbtm2{
  position: fixed;
  width: 100%;
  border-radius: 0;
  bottom:0rpx;
  }
.call-way{
  height: 300rpx;
}
.like,.favorites{
  line-height: 30rpx;
}