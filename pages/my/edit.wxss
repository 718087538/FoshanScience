/* pages/my/edit.wxss */

.img-box{
  margin: 20rpx 32rpx 28rpx;
  height: 360rpx;
}
.topimg{
  width: 100%;
  height: 100%;
}
.line1{
  display: flex;
  align-items: center;
  padding-top:18rpx;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #eee;
}
.line1 input{
  flex: 1;
  color: #999;
}
/* input未输入时的字体样式 */
.font-color{
  color: #d8d8d8;
}
.content{
  margin: 26rpx 30rpx;
  font-size: 24rpx
}
#noline{
  border-bottom: none;
  padding-bottom: 0;
}
.show-color{
  color: #999;
}

.submit{
  z-index: 999;
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #2e9aff;
  text-align: center;

}

radio-group{
  flex: 1;
  text-align: right;
}
radio{
  margin-left: 30rpx;
}

/* 改变单选的默认样式，直接改的微信封装的东西 */
radio .wx-radio-input{
  width: 14rpx;
  height: 14rpx;
  box-sizing: border-box;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  display: none;
}