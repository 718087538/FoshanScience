/* pages/index/index.wxss */
@import "/template/bottom/bottom.wxss";
page{
  background-color: #eff3f6;
}
/* 轮播图开始 */
.roll-out{
  position: relative;
}
.roll{
  width: 750rpx;
  height: 310rpx;
}
swiper-item{
  width: 100%;
  height: 100%;
}
.roll-image{
  width: 100%;
  height: 100%;
}
.roll-out .toleft{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  left: 36rpx;
  border-right-color: transparent;
  border-color: #fff;
  border-width: 0 0 2px 2px;
  border-style: solid;
  transform: rotate(45deg) translateY(-50%);
}
.roll-out .toright{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  right: 36rpx;
  border-right-color: transparent;
  border-color: #fff;
  border-width: 2px 2px 0 0;
  border-style: solid;
  transform: rotate(45deg) translateY(-50%);
}
/* 轮播图结束 */
.notice{
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.notice-img{
  width: 36rpx;
  height: 34rpx;
  margin-left: 18rpx;
  margin-right: 13rpx;

}
.notice-text{
  font-size: 22rpx;
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 各种机构 */
.content{
  margin: 0 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.user{
  width: 310rpx;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  margin-bottom: 40rpx;

}
.user-line1{
  display: flex;
  margin-top: 46rpx;
  justify-content: center;
}

.user-title{
  font-size: 32rpx;
}
.user-intro{
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  margin-top: 14rpx;
}
.user-img1{width: 53rpx;height: 47rpx;margin-right: 10rpx;}
.user-img2{width: 45rpx;height: 45rpx;margin-right: 10rpx;}
.user-img3{width: 56rpx;height: 53rpx;margin-right: 10rpx;}
.user-img4{width: 44rpx;height: 44rpx;margin-right: 10rpx;}

/* 小程序平台简介开始 */
.app-intro{
  font-size: 24rpx;
  margin-left: 32rpx;
  margin-bottom: 24rpx;
}
.my-intro{
  background-color: #fff;

}
.intro-line1{
  display: flex;
  justify-content: space-between;
  padding: 22rpx 32rpx;
}
.intro-line1-left{
  font-size: 32rpx;
  color: #2e9aff;
}
.intro-line1-right{
  font-size: 24rpx;
  color: #999;
}

.intro-line2{
  padding: 22rpx 32rpx;
  padding-top: 0;
  font-size: 24rpx;
  color: #999;
  width: 680rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 提醒未注册 */
.content-wran{
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 1330rpx;

  background-color: rgba(90, 90, 90,0.5)
}
.wraper{
  overflow: hidden;
  width: 565rpx;
  height: 245rpx;
  position: relative;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 50% auto auto;
}
.wran-text{
  font-size: 27rpx;
  color: #666;
  text-align: center;
  margin-top: 64rpx;
}
.wran-btn{
  width: 366rpx;
  display: flex;
  font-size: 27rpx;
  color: #fff;
  margin: 46rpx auto;
  justify-content: space-between;
}
.wran-btn-close,.wran-btn-jion{
  padding: 10rpx 30rpx;
  background-color: #2e9aff;
  border-radius: 10rpx;
}
/* 右上角关闭 */
.right-top-close{
  position: absolute;
  right:6rpx;
  top:-14rpx;
  color: #999999;
  font-size: 61rpx;
  transform: rotate(45deg);
}

/* 选择发布类型 */
.fixedbtm1{
  height: 1000rpx;
}
.fixedbtm2{
  position: fixed;
  width: 100%;
  border-radius: 0;
  bottom:90rpx;
  }
  
.call-way{
  height: 502rpx;
}